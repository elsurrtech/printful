<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/lightgrey"
    android:layout_height="match_parent"
    tools:context=".view.DetailsActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/r1"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_details_activity"
        android:elevation="5dp"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/image1"
        android:layout_width="100dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/black"
        android:layout_height="100dp"/>

    <RelativeLayout
        android:layout_below="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/name_activity_details"
            android:layout_marginTop="100dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:text="FullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@+id/name_activity_details"
            android:id="@+id/surname_activity_details"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:text="Surname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/v1"
            android:layout_below="@+id/surname_activity_details"
            android:layout_centerHorizontal="true"
            android:background="@color/black"
            android:layout_width="40dp"
            android:layout_margin="10dp"
            android:layout_height="1dp"/>

        <TextView
            android:layout_below="@+id/v1"
            android:id="@+id/email_activity_details"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:text="deepeshsengar000@gmail.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_below="@+id/email_activity_details"
            android:layout_centerHorizontal="true"
            android:text="Back"
            android:id="@+id/btnBack_details"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>






</RelativeLayout>